@model Borrower

@{
    ViewBag.Title = "Delete Borrower";
}

<h2>Delete Borrower</h2>

<h3>Are you sure you want to delete this borrower?</h3>
<div>
    <h4>@Model.FName @Model.LName</h4>
    <p>Phone Number: @Model.PhoneNum</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="BorrowerId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
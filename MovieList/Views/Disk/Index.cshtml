@model IEnumerable<MovieList.Models.Disk>

<h3>Disk List</h3>
<div class="mb-4">
    <a asp-action="Create" class="btn btn-primary">Add New Disk</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Disk ID</th>
            <th>Name</th>
            <th>Genre</th>
            <th>Status</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var disk in Model)
        {
            <tr>
                <td>@disk.DiskId</td>
                <td>@disk.DiskName</td>
                <td>@disk.Genre?.Description</td>
             
                <td>
                    <a asp-action="Edit" asp-route-id="@disk.DiskId" class="btn btn-info">Edit</a>
                    <form asp-action="Delete" asp-route-id="@disk.DiskId" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
@model MovieList.Models.Disk

@{
    ViewBag.Title = "Edit Disk";
}

<h2>Edit Disk</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- Disk ID (Hidden) -->
    <input type="hidden" asp-for="DiskId" />

    <!-- Disk Name -->
    <div class="form-group">
        <label asp-for="DiskName">Disk Name</label>
        <input asp-for="DiskName" class="form-control" />
        <span asp-validation-for="DiskName" class="text-danger"></span>
    </div>

    <!-- Release Date -->
    <div class="form-group">
        <label asp-for="ReleaseDate">Release Date</label>
        <input asp-for="ReleaseDate" type="date" class="form-control" />
        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
    </div>



    <!-- Submit and Cancel Buttons -->
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
